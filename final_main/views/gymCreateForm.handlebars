<div class = "gyms">
<br><br><br>
<form action="/gym/addGym" id="gymCreation" method="post">
    <label for="branchName">Branch Name:</label><br>
    <input type="text" id="branchName" name="branchName" required><br>

    <label for="website">Website:</label><br>
    <input type="url" id="website" name="website" required><br>

    <label for="address">Address:</label><br>
    
    <label for="streetName"> Street: </label>
    <textarea id="streetName" name="streetName" placeholder= "Enter Street Name " required></textarea><br>
    
    <label for="city"> City: </label>
    <textarea id="city" name="city" placeholder="Enter City" required></textarea><br>

    <label for="State"> State: </label>
    <textarea id="state" name="state" placeholder="Enter State" required></textarea><br>

    <label for="zipCode"> Zip Code: </label>
    <input type="text" id="zipCode" name="zipCode" placeholder="00000" required></input><br>

    <label for="phoneNumber">Phone Number:</label><br>
    <input type="tel" id="phoneNumber" name="phoneNumber" required><br>

    <label for="email">Email:</label><br>
    <input type="email" id="email" name="email" required><br>

    <label for="maxCapacity">Max Population Density:</label><br>
    <input type="number" id="maxCapacity" name="maxCapacity" required><br>

    <input type="submit" value="createGym">
        {{#if error }}
            <div class="form-group">
                <div class="alert alert-danger">
                    <p>{{ error }} </p>
                </div>
            </div>
        {{/if}}    

</form>
</div>
<div class="navigation">
    <a class="classes_link" href="/gym/gymDetails">All Gyms</a>
    <a class="go_home_link" href="/">Go to Home Page</a><br>
</div>
