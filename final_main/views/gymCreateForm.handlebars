<div class = "classes">
<br><br><br>
<div class="form-cont">
<form action="/gym/addGym" id="gymCreation" method="post">
    <label for="branchName">Branch Name:</label><br>
    <input type="text" id="branchName" name="branchName" placeholder = "Branch Name" required><br>

    <label for="website">Website:</label><br>
    <input type="url" id="website" name="website" placeholder = "https://www.example.com" required><br>

    <label for="address">Address:</label><br>
    
    <label for="streetName"> Street: </label>
    <textarea id="streetName" name="streetName" placeholder= "Enter Street Name " required></textarea><br>
    
    <label for="city"> City: </label>
    <textarea id="city" name="city" placeholder="Enter City" required></textarea><br>

    <label for="State"> State: </label>
    <textarea id="state" name="state" placeholder="Enter State" required></textarea><br>

    <label for="zipCode"> Zip Code: </label>
    <input type="text" id="zipCode" name="zipCode" placeholder="00000" required></input><br>

    <label for="phoneNumber">Phone Number:</label><br>
    <input type="tel" id="phoneNumber" name="phoneNumber" placeholder = "0123456789" required><br>

    <label for="email">Email:</label><br>
    <input type="email" id="email" name="email" placeholder = "abc@def.ghi" required><br>

    <label for="maxCapacity">Max Capacity:</label><br>
    <input type="number" id="maxCapacity" placeholder="1-200" name="maxCapacity" required><br>

    <input type="submit" value="createGym" class="clickbutton">
        {{#if error }}
            <div class="form-group">
                <div class="alert alert-danger">
                    <p>{{ error }} </p>
                </div>
            </div>
        {{/if}}    

</form>
</div>
</div>
