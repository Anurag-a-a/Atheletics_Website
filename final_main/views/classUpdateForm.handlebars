<h1>Update Class</h1>
	<form id="classUpdation" method="POST" action="gym/updateClass">
		<label for="className">Class Name:</label>
		<input type="text" id="className" name="className" required value="{{className}}"><br><br>

		<label for="date1">Date 1:</label>
		<input type="date" id="date" name="date" required value="{{	date}}" ><br><br>

		<label for="timings1">Timings 1:</label>
		<input type="text" id="timings" name="timings" required value = "{{ timing }}"><br><br>

		<label for="instructor">Instructor:</label>
		<input type="text" id="instructor" name="instructor" required value = " {{ instructor }} "><br><br>

		<label for="description">Description:</label>
		<textarea id="description" name="description" required value= " {{ description }} "></textarea><br><br>

		<button type="submit" value = "updateClass">Update Class</button>
	</form>