<div class = "classes">
<h1>Update Class</h1>
	<form id="classUpdation" method="POST" class = "classes-form">
		<label for="className">Class Name:</label>
		<input type="text" id="className" name="className" required value="{{classDetails.className}}"></input><br><br>

		<label for="date1">Date 1:</label>
		<input type="date" id="date1" name="date" required value="{{	classDetails.slots.Date}}" ></input><br><br>

		<label for="timings1">Timings 1:</label>
		<input type="text" id="timings1" name="timings" required value = "{{ classDetails.slots.timing }}"></input><br><br>

		<label for="timings2">2 Time: </label>
		<input type="text" id = "timings2" name = "timings2"></input><br><br>

		<label for="instructor">Instructor:</label>
		<input type="text" id="instructor" name="instructor" required value = " {{ classDetails.instructor }} "></input><br><br>

		<label for="description">Description:</label>
		<input id="description" name="description" required value= " {{ classDetails.description }} "></input><br><br>

		<label for="maxCapacity">Max Capacity:</label>
		<input id="maxCapacity" name="maxCapacity" required value= " {{ classDetails.classCapacity }} "></input><br><br>

		<input type="submit" id = "updateB"value = "updateClass">Update Class</button>
	        {{#if error }}
            <div class="form-group">
                <div class="alert alert-danger">
                    <p>{{ error }} </p>
                </div>
            </div>
        {{/if}}    

	</form>	
</div>
    <a class="classes_link" href="/class/classDetails">back to all classes</a>
	<a class="go_home_link" href="/">Go to Home Page</a><br>

<script src="/public/js/classFormValidation.js"></script>