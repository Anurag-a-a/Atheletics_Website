    <div class="myAppointments">
      <p>Class Name: {{this.className}}</p>
      <p>Selected Time Slot: {{this.selectedTimeSlotString}}</p>
    </div>
  {{/each}}
{{else}}
  <p>No past appointments found</p>
{{/if}}