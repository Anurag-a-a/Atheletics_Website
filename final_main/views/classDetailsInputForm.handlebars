		<input type="text" id="instructor" name="instructor" placeholder="Name of Instructor" required></input><br><br>

		<label for="description">Description:</label>
		<input id="description" name="description" placeholder="Description of Class" required></input><br><br>

		<label for="maxCapacity">Max Capacity:</label>
		<input id="maxCapacity" name="maxCapacity" placeholder="0-200" required></input><br><br>

		<input type="submit" value="addClass" class="clickbutton"></input>

