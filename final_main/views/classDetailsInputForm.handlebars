<div class = "classes">
<h1>Create Event</h1>
	<form id="classCreation" method="POST" class="classes-form" action="classCreation">
		<label for="className">Class Name:</label>
		<input type="text" id="className" name="className" required></input><br><br>

		<label for="date1">Date:</label>
		<input type="date" id="date1" name="date" required></input><br><br>

		<label for="timings1">1 Time:</label>
		<input type="text" id="timings1" name="timings" required></input><br><br>
		
		<label for="timings2">2 Time: </label>
		<input type="text" id = "timings2" name = "timings2"></input><br><br>
		
		<label for="instructor">Instructor:</label>
		<input type="text" id="instructor" name="instructor" required></input><br><br>

		<label for="description">Description:</label>
		<input id="description" name="description" required></input><br><br>

		<label for="maxCapacity">Max Capacity:</label>
		<input id="maxCapacity" name="maxCapacity" required></input><br><br>

		<input type="submit" value="addClass"></input>
	        {{#if error }}
            <div class="form-group">
                <div class="alert alert-danger">
                    <p>{{ error }} </p>
                </div>
            </div>
        {{/if}}    

	</form>
</div>

    <a class="classes_link" href="/class/classDetails">back to all classes</a>
    <a class="go_home_link" href="/">Go to Home Page</a><br>

	<script src="/public/js/classFormValidation.js"></script>