<br><br><br>
<div class=" classes">

{{#each classes}}

<div>
<p>
    <h2>
        {{  this.className  }}
    </h2>
</p>
    <p>
        Slots:
        Date : {{this.slots.Date}}
        Time : {{this.slots.timing}}
    </p>
    <p>
        Phone: 
        {{  this.instructor }}
    </p>
    <p>
        Email: {{   this.description }}
    </p>
    <p>
        Max Population Density : {{ this.classCapacity  }}
    </p>

    <form id="class-update-{{this._id}}" class="class-update-form" method="POST">
      <button class="updatebtn" data-class-id="{{this._id}}" >Update Class Details</button>
    </form>

    <form id="class-delete-{{this._id}}" class="class-delete-form" method="POST">
      <button class="deletebtn" data-class-id="{{this._id}}">Delete Class</button>
    </form>
</div>
    {{/each}}
<div class="navigation">
    <a class="go_home_link" href="/">Go to Home Page</a><br>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/public/js/updateDeleteClass.js"></script>