<div class = "classes">
<h1>Class and event</h1>
<div class="form-cont">
    <p></p>

    {{#if classes}}
    <ul>
        {{#each classes}}
        <li>
            <h2 >{{this.className}}</h2>
            <input type="hidden" class="class_id" value="{{this._id}}">
            <p>
                Date : {{#if this.slots.Date}}
                {{
                this.slots.Date
                }}
            </p>
            {{else}}
            <p>No Dates slots available.</p>
            {{/if}}
            <p>
                Time: {{#if this.slots.timing}}
                {{
                this.slots.timing
                }}
            </p>
            {{else}}
            <p>No time slots available.</p>
            {{/if}}


            Reviews: {{#if this.reviewsText}}
            <ul>
                {{#each this.reviewsText}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{else}}
            <p>No reviews.</p>
                        <button class="add_class_review" data-class-id="{{this._id}}">add reviews</button>
            {{/if}}
            
        </li>
        <if condition="$error">
        <div id="error-message" class="alert alert-danger" role="alert" style="display: none;"></div>
        {{/each}}
    </ul>

    {{else}}
    <p>No classes available.</p>
    {{/if}}


</div>
</div>
