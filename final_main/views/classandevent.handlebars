<h2>Class and event</h2>
<div class="classandevent">
    <p></p>
    <form action="/routes/classandevent.js" method="POST">
        {{#if classes}}
        <ul>
            {{#each classes}}
            <li>
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                {{#if this.timeSlots}}
                <ul>
                    {{#each this.timeSlots}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                {{else}}
                <p>No time slots available.</p>
                {{/if}}
            </li>
            {{/each}}
        </ul>
        {{else}}
        <p>No classes available.</p>
        {{/if}}
    </form>

</div>